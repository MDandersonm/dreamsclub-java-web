<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.dreams.mapper.CommunityMapper">

<!-- 게시판 등록 -->
<insert id="enrollCommunity">
	insert into Community(COMM_NO, COMM_TITLE, COMM_CONT, MEMBER_ID) values (COMMUNITY_SEQ.NEXTVAL, #{COMM_TITLE}, #{COMM_CONT}, #{MEMBER_ID})
</insert>

<!-- 게시판 전체 목록보기 -->
<select id="getList" resultType="xyz.dreams.dto.CommunityDTO">
	select * from community
</select>

<!-- 게시판 글 하나 보기 -->
<select id="getPage" resultType="xyz.dreams.dto.CommunityDTO">
	select * from community where COMM_NO=#{COMM_NO}
</select>

<!-- 게시판 글 수정 -->
<update id="modifyCommunity">
	update community set comm_tit=#{comm_tit}, comm_cont=#{comm_cont} where comm_no
</update>

<!-- 게시판 글 삭제 -->
<delete id="deleteCommunity">
	delete * from community where COMM_NO=#{COMM_NO}
</delete>

</mapper>